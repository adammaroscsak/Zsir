<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane stylesheets="@../styles/Styles2.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.MainController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Játék">
               <items>
                  <MenuItem fx:id="newGameMenultem" mnemonicParsing="false" onAction="#newGame" text="Új játék" />
                  <MenuItem fx:id="scoreTableMenultem" mnemonicParsing="false" onAction="#showScoreDialog" text="Ranglista" />
                  <MenuItem fx:id="exitMenultem" mnemonicParsing="false" onAction="#exit" text="Kilépés" />
               </items></Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <AnchorPane fx:id="mainPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="650.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="checkbutton" layoutX="100.0" layoutY="440.0" mnemonicParsing="false" onAction="#check" text="Passz" visible="false" />
         </children></AnchorPane>
    </center>
</BorderPane>
